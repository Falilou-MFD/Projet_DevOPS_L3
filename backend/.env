# ====================================
# 1. PARAMÈTRES DE LA BASE DE DONNÉES
# ====================================

# Type de base de données (exemple: postgres ou mysql)
DATABASE_ENGINE=django.db.backends.postgresql 

# Nom de la base de données
DATABASE_NAME=nom_de_votre_bd

# Utilisateur de la base de données (le rôle)
DATABASE_USER=utilisateur_bd

# Mot de passe de l'utilisateur
DATABASE_PASSWORD=votre_mot_de_passe_securise

# Hôte où tourne la base de données (localhost pour le développement)
DATABASE_HOST=localhost

# Port de la base de données (5432 par défaut pour PostgreSQL)
DATABASE_PORT=5432